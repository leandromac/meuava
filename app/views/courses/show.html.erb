<p id="notice"><%= notice %></p>

<div class="row x_title">
  <div class="col-md-6"> 
  <h3><%= @course.title %></h3>
    </div>
</div>

<blockquote><%= @course.description %></blockquote>



<p>
  <strong>Duration:</strong>
  <%= @course.duration %>
</p>

<p>
  <strong>Price:</strong>
  <%= @course.price %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@course.picture_url, :width => 600) if @course.picture.present? %>
</p>

<%= link_to 'Edit', edit_course_path(@course), :class => 'btn btn-warning btn-sm' %>
<%= link_to 'Back', @courses_path, :class => 'btn btn-default' %>
